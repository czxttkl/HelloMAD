<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#b3ddff" >"

	<edu.neu.madcourse.binbo.rocketrush.GameView
	    android:id="@+id/rocketRushView"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	
	<ImageButton
    	android:id="@+id/rushModeButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="50dp"
		android:src="@drawable/rush_mode_btn_selector"
		android:background="#00000000" />
	
	<ImageButton
	    android:id="@+id/vsModeButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="10dip"
	    android:src="@drawable/vs_mode_btn_selector"
	    android:background="#00000000" />
	
	<TextView 
	    android:id="@+id/timerView" 
	    android:text="timer"
		android:visibility="invisible"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|right" android:background="#000000" />

</FrameLayout>