<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.binbo"
    android:versionCode="9"
    android:versionName="1.3.4" >

    <uses-sdk android:minSdkVersion="10" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_DATA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="false" >
        <activity
            android:name=".HelloMAD"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name=".About"
			android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog">
		</activity>			
		
		<!-- sudoku activities -->
		
		<activity android:name=".Sudoku" 
            android:label="@string/sudoku_title" />
		
		<activity android:name=".SudokuGame" 
            android:label="@string/sudoku_title" />
        
		<activity android:name=".SudokuAbout"
			android:label="@string/sudoku_about_title"
            android:theme="@android:style/Theme.Dialog">
		</activity>
		
		<activity android:name=".SudokuPrefs" 
		    android:label="@string/sudoku_settings_title" >
		</activity>
		
		<!-- boggle activities -->
		
		<activity android:name=".Boggle" 
            android:label="@string/boggle_title" />
		
		<activity android:name=".BoggleGame" 
            android:label="@string/boggle_title"
            android:configChanges="orientation|keyboardHidden" />
		
		<activity android:name=".BoggleAbout"
			android:label="@string/boggle_about_title"
            android:theme="@android:style/Theme.Dialog">
		</activity>
		
		<activity android:name=".BoggleAcknowledge"
			android:label="@string/boggle_acknowledge_title"
            android:theme="@android:style/Theme.Dialog">
		</activity>
		
    </application>

</manifest>